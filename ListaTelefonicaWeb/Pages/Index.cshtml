@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container text-center">
    <form action="/index" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="act" id="act" value="" />
        <input type="hidden" name="contact-id" id="contact-id" value="" />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Contato contato in Model.Resultado)
                {
                    <tr>
                        <td>@contato.name</td>
                        <td>@contato.email</td>
                        <td>
                            <button class="btn btn-small btn-danger btn-remove" data-id="@contato.id">Delete</button>
                            <button class="btn btn-small btn-primary btn-edit" data-id="@contato.id">Edit</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

@section Scripts {
    <script src="js/index.js"></script>
}
